{
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#7841da",
    "activityBar.background": "#7841da",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#502710",
    "activityBarBadge.foreground": "#e7e7e7",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#7841da",
    "statusBar.background": "#5e26c2",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#7841da",
    "statusBarItem.remoteBackground": "#5e26c2",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#5e26c2",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#5e26c299",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.color": "#5e26c2",
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "biomejs.biome",
  "files.associations": {
    "*.css": "tailwindcss",
    ".env.*": "properties",
    ".npmcheckrc": "json"
  },
  "editor.codeActionsOnSave": {
    "source.organizeImports.biome": "explicit",
    "source.removeUnusedImports": "explicit",
    "source.fixAll.biome": "explicit"
  },
  "tailwindCSS.experimental.classRegex": [
    "tw`([^`]*)" // tw`...`
  ],
  "[tailwindcss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[dockercompose]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-containers"
  },
  "prettier.documentSelectors": ["**/*.css", "**/*.mdx"],
  "i18n-ally.localesPaths": ["./packages/i18n/dict"], // Paths are relative to ROOT dir, not .vscode dir
  "i18n-ally.keystyle": "nested",
  "i18n-ally.editor.preferEditor": true,
  "i18n-ally.enabledFrameworks": ["next-intl"],
  "i18n-ally.translate.engines": ["deepl", "google"],
  "i18n-ally.sourceLanguage": "en"
}
